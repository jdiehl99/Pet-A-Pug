<div class="row">
    <div class="col text-center" id="puglist">
        <h2>Pugs to Pet</h2>
        {{#each pugs}} {{#unless didpet}}

        <form action="/pugs/done" method="post">
            <input type="hidden" name="id" value="{{id}}"> {{pugName}}
            <button type="submit" id="donebtn" class="btn btn-outline-secondary">Pet the Pug!</button>
        </form> {{/unless}}
        <br/> {{/each}}
    </div>
    <div class="col text-center" id="pugdone">
        <h2 class="text-center">Happy Pugs!</h2>
        <ul>
            {{#each pugs}} {{#if didpet}}
            <li>{{pugName}}</li>
            {{/if}} {{/each}}
        </ul>
    </div>
</div>